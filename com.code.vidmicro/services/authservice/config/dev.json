{
    "database": {
        "dbname": "auth"
    },
    "microServiceName": "authService",
    "address": "localhost:8080",
    "controllers": ["User", "Session"],
    "allowDB": true,
    "serviceLogName": "auth",
    "publishingTopics": [
        "vidmicro.content"
    ],
    "subscribedTopics": {
        "vidmicro.content":"HandleAuthData"
    },
    "apis": {
        "/api/createSession":["GET"],
        "/api/signup":["POST"],
        "/api/login":["POST"],
        "/api/refreshToken":["POST"],
        "/api/getUser":["GET"]
    },
    "sessionSecret": "*mongonormalcontrollers.SessionController",
    "tokenExpiry": 5000,
    "acl": {
        "user": [
            "/api/getUser"
        ],
        "admin": [
            "/api/getUser"
        ],
        "manager": [
            "/api/getUser"
        ]
    }
}