{
    "database": {
        "dbname": "auth"
    },
    "microServiceName": "authService",
    "address": "localhost:8080",
    "controllers": ["User", "Session", "Roles"],
    "allowDB": true,
    "serviceLogName": "auth",
    "publishingTopics": [
        "vidmicro.content"
    ],
    "subscribedTopics": {
    },
    "emailVerificationURL": "http://localhost:8080/api/verifyEmail/",
    "emailBody": "Hi %s! Please verify your email address by clicking the following address: %s",
    "emailSubject": "Vidmicro Email Verification",
    "emailConfig": {
        "smtpServer": "smtp.gmail.com",
        "port": 587,
        "username": "your-name",
        "password": "password",
        "fromAddress": "email-address",
        "fromName": "name",
        "isTLS": true
    },
    "emailVerificationTokenExpiry" : 360,
    "apis": {
        "/api/createSession":["GET"],
        "/api/signup":["POST"],
        "/api/login":["POST"],
        "/api/refreshToken":["POST"],
        "/api/getUser":["GET"],
        "/api/blackListUser":["POST"],
        "/api/editUser": ["POST"],
        "/api/verifyEmail": ["GET"]
    },
    "sessionSecret": "*mongonormalcontrollers.SessionController",
    "tokenExpiry": 5000,
    "acl": {
        "user": {
            "/api/getUser": ["GET"],
            "/api/editUser":["POST"]
        },
        "admin": {
            "/api/getUser": ["GET"],
            "/api/editUser":["POST"],
            "/api/blackListUser":["POST"]
        },
        "manager": {
            "/api/getUser": ["GET"],
            "/api/editUser":["POST"]
        }
    },
    "sessionExpirySeconds":6000000
}