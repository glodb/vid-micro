{
    "database": {
        "dbname": "auth"
    },
    "microServiceName": "authService",
    "address": "localhost:8080",
    "controllers": ["User", "Session"],
    "allowDB": true,
    "serviceMicroName": "webservergin-dev.fifo",
    "serviceLogName": "auth",
    "publishingTopics": [
        "vidmicro.content"
    ],
    "subscribedTopics": {
        "vidmicro.content":"HandleAuthData"
    },
    "apis": {
        "/api/createSession":["POST"],
        "/api/register":["GET"]
    },
    "sessionSecret": "*mongonormalcontrollers.SessionController",
    "acl": {
        "user": [
            "/api/getUser",
            "/api/logout"
        ],
        "admin": [
            "/api/getUser",
            "/api/logout"
        ],
        "manager": [
            "/api/getUser",
            "/api/logout"
        ]
    }
}