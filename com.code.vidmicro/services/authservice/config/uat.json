{
  "database": {
      "dbname": "auth"
  },
  "microServiceName": "authService",
  "address": "localhost:8080",
  "controllers": ["User", "Session", "Roles"],
  "allowDB": true,
  "serviceLogName": "auth",
  "publishingTopics": [
      "vidmicro.content"
  ],
  "subscribedTopics": {
  },
  "apis": {
      "/api/createSession":["GET"],
      "/api/signup":["POST"],
      "/api/login":["POST"],
      "/api/refreshToken":["POST"],
      "/api/getUser":["GET"],
      "/api/blackListUser":["POST"],
      "/api/editUser": ["POST"]
  },
  "sessionSecret": "*mongonormalcontrollers.SessionController",
  "tokenExpiry": 5000,
  "acl": {
      "user": {
          "/api/getUser": ["GET"],
          "/api/editUser":["POST"]
      },
      "admin": {
          "/api/getUser": ["GET"],
          "/api/editUser":["POST"],
          "/api/blackListUser":["POST"]
      },
      "manager": {
          "/api/getUser": ["GET"],
          "/api/editUser":["POST"]
      }
  },
  "sessionExpirySeconds":6000000
}